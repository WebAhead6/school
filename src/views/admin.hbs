<div class="teacher">
  <div class="teacher-form">

    <form action="/addStudent" method="POST">
      <fieldset>
        <legend>add a user</legend>



        <label>add Name: <input type='text' id='name' name='name'></label>
        <br />
        <label>add email: <input type='text' id='email' name='email'></label>
        <br />
        <label>add password: <input type='text' id='password' name='password'></label>
        <br />
        <label>confirmPassword: <input type='text' id='password' name='confirmPassword'></label>
        <br />
        gender :
        <label><input type="radio" name="gender" value="m">male</label>
        <label><input type="radio" name="gender" value="f">female</label>
        <br />

        <label>age: <input type="number" name="age" min="5" max="20"></label>
        <br />
        role :
        <br />

        <label><input type="radio" name="role" value="admin">admin</label>
        <label><input type="radio" name="role" value="teacher">teacher</label>
        <label><input type="radio" name="role" value="student">student</label>
        <br />

        classes :
        <br />
        <label><input type="checkbox" name="class" value="1">arabic</label>
        <label><input type="checkbox" name="class" value="2">english</label>
        <label><input type="checkbox" name="class" value="3">math</label>
        <label><input type="checkbox" name="class" value="4">hebrow</label>
        <label><input type="checkbox" name="class" value="5">art</label>

        <br />

        <input type='submit' value="submit">
      </fieldset>
    </form>
    {{error}}
  </div>
</div>








